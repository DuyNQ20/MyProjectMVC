@model MyProject.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div class="sb2-2">
    <div class="sb2-2-2">
        <ul>
            <li>
                <a href="#"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
            </li>
            <li class="active-bre">
                <a href="#"> Edit Listing</a>
            </li>
        </ul>
    </div>
    <div class="sb2-2-add-blog sb2-2-1">
        <h2>Cập nhật sản phẩm</h2>
        <p></p>
        <p></p>
        <div class="tab-content">
            <div id="home" class="tab-pane fade in active">
                <div class="box-inn-sp">
                    @*<div class="inn-title">
                        <h4>Listing Information</h4>
                        <p>Airtport Hotels The Right Way To Start A Short Break Holiday</p>
                    </div>*@
                    <div class="bor">
                        <form asp-action="Edit">
                            <input type="hidden" asp-for="Id" />

                            @*Bên trái*@
                            <div class="col s8">
                                <div class="row">
                                    <div class="input-field col s12 tensp">
                                        <input id="product-name" type="text" class="validate" asp-for="Name">
                                        <label>Tên sản phẩm</label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s12">
                                        <div class="input-field col s5" style="padding: 0">
                                            @Html.DropDownList("ProductCategoryId")
                                            <label style="left: 0">Loại sản phẩm</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s12">
                                        <div class="input-field col s5" style="padding: 0">
                                            @Html.DropDownList("VendorId")
                                            <label style="left: 0">Nhà cung cấp</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s12">
                                        <span>Cấu hình</span>
                                        <textarea id="specifications" type="text" asp-for="Specifications"></textarea>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s12">
                                        <span>Mô tả</span>
                                        <textarea name="product-description" id="list-name" type="text" asp-for="Decriptions"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="col s4">
                                <div class="row">
                                    <div class="input-field col s12">
                                        <input id="originalprice" type="text" class="validate" asp-for="OriginalPrice" value="@Model.OriginalPrice.ToString("#,##")">
                                        <label for="list-name">Giá gốc</label>
                                    </div>
                                </div>
                                <div class="row">

                                    <div class="input-field col s12">
                                        <input id="saleprice" type="text" class="validate" asp-for="SalePrice" value="@Model.SalePrice.ToString("#,##")">
                                        <label for="list-name">Giá bán</label>
                                    </div>
                                </div>
                                <div class="row">

                                    <div class="input-field col s12">
                                        <input id="inventory" type="text" class="validate" asp-for="Inventory" value="@Model.Inventory.ToString("#,##")">
                                        <label for="list-name">Số lượng</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <select>
                                            <option asp-for="Active" value="1" @(Model.Active ? "selected" : "" )>Mới</option>
                                            <option asp-for="Active" value="2" @(Model.Active= =false ? "selected" : "" )>Không mới</option>
                                        </select>
                                        <label>Hàng mới</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <select>
                                            <option asp-for="Active" value="1" @(Model.Active ? "selected" : "" )>Xuất bản</option>
                                            <option asp-for="Active" value="2" @(Model.Active= =false ? "selected" : "" )>Chưa xuất bản</option>
                                        </select>
                                        <label>Trạng thái</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col s8">
                                <div class="row">
                                    <div class="input-field col s8">
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            <i class="fa fa-save"> </i> Lưu[Cập nhật]
                                        </button>
                                        <button type="button" class="btn btn-primary btn-sm">
                                            <i class="fa fa-times-circle "></i> Thoát
                                        </button>
                                        @*<input type="submit" class="waves-effect waves-light btn-large " value="Submit">*@
                                    </div>
                                </div>
                            </div>
                           
                            <div style="clear: both"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>